#!/usr/bin/env python3
# This file is placed in the Public Domain.


"service"


import getpass


from obx.modules import face
from obx.persist import Workdir, pidname
from obx.runtime import NAME, errors, forever, init, pidfile, privileges, wrap


PROGNAME = NAME


def main():
    "main"
    privileges(getpass.getuser())
    pidfile(pidname())
    init(face)
    forever()


if __name__ == "__main__":
    wrap(main, print)
    errors(print)
